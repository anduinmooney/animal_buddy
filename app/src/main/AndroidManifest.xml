<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.animalbuddy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.RandomSearchActivity"
            android:label="@string/title_activity_random"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ShelterSearchActivity"
            android:label="@string/title_activity_shelter_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.PetActivity"
            android:label="@string/title_activity_pet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".services.PetService" />
        <activity
            android:name=".ui.PetDetailActivity"
            android:label="@string/title_activity_pet_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.ShelterActivity"></activity>
    </application>

</manifest>